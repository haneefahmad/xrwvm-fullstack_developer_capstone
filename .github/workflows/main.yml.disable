name: Lint Code

on:
  push:
    branches: [master, main]
  pull_request:
    branches: [master, main]

jobs:
  lint_python:
    name: Lint Python Files
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install flake8

      - name: Run Linter
        run: |
          pwd
          flake8 . \
            --max-line-length=120 \
            --exclude=.git,__pycache__,server/djangoapp/migrations \
            --extend-ignore=E111,E117,E122,E131,E203,E225,E231,E261,E265,E275,E302,E303,E501,E712,E722,F401,F811,F841,W291,W292,W293,W391
          echo "Linted all the python files successfully"

  lint_js:
    name: Lint JavaScript Files
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Install Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "18"

      - name: Install JSHint
        run: npm install -g jshint

      - name: Run Linter
        run: |
          find ./server/database -name "*.js" -exec jshint --config ./server/database/.jshintrc {} +
          echo "Linted all the js files successfully"
